source 'https://rubygems.org'

gem 'rails', '3.2.8'
gem 'sqlite3'

gem 'jquery-rails'
gem 'rails_config'
gem 'redcarpet'

gem 'therubyracer', platforms: :ruby
gem 'therubyrhino', platforms: :jruby

gem 'slim-rails'
gem 'yaml_db'

gem 'activeadmin'

group :production do
  gem 'passenger'
  gem 'mysql2'
end

group :assets do
  gem 'sass-rails'
  gem 'less-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'google-code-prettify-rails'
end

group :development do
  gem 'guard-livereload'
end

group :development, :test do
  gem 'rspec-rails'
end

